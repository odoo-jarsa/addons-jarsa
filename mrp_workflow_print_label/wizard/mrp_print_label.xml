<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Print Label -->
        <record id="view_mrp_print_label_wizard" model="ir.ui.view">
            <field name="name">Label Printing</field>
            <field name="model">mrp.print.label</field>
            <field name="arch" type="xml">
                <form string="Label">
                    <group string="Lots">
                        <group col="4">
                            <label attrs="{'invisible': [('bom_cloth', '=', 'cloth')]}" col="2" for="print_lot" string="Cut Lot"/>
                            <label attrs="{'invisible': [('bom_cloth', '=', 'cover')]}" col="2" for="print_lot" string="Print Lot"/>
                            <field attrs="{'invisible' :[('bom_cloth', '=', True)]}" col="2" colspan="2" name="print_lot" nolabel="1"/>
                        </group><br/>
                        <group>
                            <field invisible="1" name="order_id"/>
                            <field invisible="1" name="bom_cloth"/>
                            <field attrs="{'invisible' :[('bom_cloth', '=', 'cover')]}" name="components_number"/>
                            <field attrs="{'invisible' :[('bom_cloth', '=', 'cover')]}" name="components_pieces"/>
                            <field invisible="1" name="total_pieces"/>
                            <field attrs="{'invisible' :[('bom_cloth', '=', 'cloth')]}" name="container_qty"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" icon="gtk-print" name="print_report" string="Print" type="object"/>or
                        
                        
                        <button class="oe_link" special="cancel" string="Cancel"/></footer>
                </form>
            </field>
        </record>
        <record id="mrp_print_label_wizard" model="ir.actions.act_window">
            <field name="name">MRP Workflow Print Label Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.print.label</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>