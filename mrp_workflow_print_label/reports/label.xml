<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="label_qweb">
            <t t-call="report.html_container">
              <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">
                        <table class="table table-striped" border="2px">
                            <tr>
                                <th>Lote de Impresion</th>
                                <td><span t-field="doc.lote_impresion"/></td>
                                <th>Cantidad</th>
                            </tr>
                            <tr>
                                <th>Lote de Corte</th>
                                <td><span t-esc="doc.lote_corte"/></td>
                                <td rowspan="2"><span t-esc="doc.cantidad"/></td>
                            </tr>
                            <tr>
                                <th>Descripcion</th>
                                <td><span t-esc="doc.descripcion"/></td>
                            </tr>
                            <tr>
                                <th>No. Parte</th>
                                <td><span t-esc="doc.parte"/></td>
                                <td rowspan="4"><img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % doc.company_id.logo" style="max-height: 45px;"/></td>
                            </tr>
                            <tr>
                                <th>Auditor/Inpsector</th>
                                <td><span t-esc="doc.auditor"/></td>
                            </tr>
                            <tr>
                             <th>Responsable</th>
                            <td><span t-esc="doc.user_id.name"/></td>
                            </tr>
                        </table>
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', 'doc.name', 600, 100)" style="width:300px;height:50px"/>
                    </div>
                </t>
              </t>
            </t>
        </template>
        <!-- Generates the report in Odoo -->
        <report
            file="mrp_workflow_print_label.label_qweb"
            id="print_label_qweb"
            model="mrp.production"
            name="mrp_workflow_print_label.label_qweb"
            report_type="qweb-html"
            string="Print Label Test"/>
        <!--Traductor de Reporte-->
