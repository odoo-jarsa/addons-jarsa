<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="shipment">
            <t t-call="report.html_container">
                <t t-as="doc" t-foreach="docs">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-3">
                                <img style="max-height:100px; max-width:100px;" t-att-src="'data:image/png;base64,%s' % user.company_id.logo" t-if="user.company_id.logo"/>
                            </div>
                            <div class="col-xs-8 col-xs-offset-1">
                                <strong style="font-size:12px;">
                                    <span t-esc="user.company_id.partner_id.name"/>
                                    <br/>
                                    <span t-esc="user.company_id.partner_id.street"/>
                                    <span t-esc="user.company_id.partner_id.street2"/>
                                    <span t-esc="user.company_id.partner_id.zip"/>
                                    <span t-esc="user.company_id.partner_id.city"/>
                                    <br/>
                                    <span t-esc="user.company_id.partner_id.state_id.name"/>
                                    <span t-esc="user.company_id.partner_id.country_id.name"/>Tel: 
                                    <span t-esc="user.company_id.partner_id.phone"/>
                                    FAX. 
                                    <span t-esc="user.company_id.partner_id.fax"/></strong>
                            </div>
                            <div class="row zero_min_height">
                                <div class="col-xs-12">
                                    <div style="border-bottom: 1px solid black;"/>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-xs-9">
                                <strong style="font-size:12px;">
                                    <span t-esc="doc.partner_id.name"/>
                                    <br/>
                                    <span t-esc="doc.partner_id.street"/>
                                    <span t-esc="doc.partner_id.street2"/>
                                    <span t-esc="doc.partner_id.zip"/>
                                    <span t-esc="doc.partner_id.city"/>
                                    <br/>
                                    <span t-esc="doc.partner_id.state_id.name"/>
                                    <span t-esc="doc.partner_id.country_id.name"/>Tel: 
                                    
                                    
                                
                                    <span t-esc="doc.partner_id.phone"/>
                                    FAX. 
                                    
                                    
                                
                                    <span t-esc="doc.partner_id.fax"/></strong>
                            </div>
                            <div class="col-xs-3 text-right">
                                <t t-if="doc._get_type() == 'cloth'">
                                    <span>FOR-ADM-03 (A) 
                                        <br/>
                                        Ver.02</span>
                                </t>
                                <t t-if="doc._get_type() == 'cover'">
                                    <span>FOR-ADM-03 (B) 
                                        <br/>
                                        Ver.02</span>
                                </t>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="col-xs-12">
                            <h2 style="margin-top: -2px;">
                                <span>Shipment #</span>
                                <span t-field="doc.sale_id.name"/>
                                <br/>
                            </h2>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <span>Date Shipment</span>
                                <br/>
                                <span t-esc="doc._get_time(doc.date)"/>
                            </div>
                            <div class="col-xs-3">
                                <span>Comercial:</span>
                                <br/>
                                <span t-esc="doc.sale_id.user_id.name"/>
                            </div>
                            <div class="col-xs-6"/>
                        </div>
                        <br/>
                        <div class="row">
                            <t t-set="lines" t-value="doc._get_data()"/>
                            <t t-set="count" t-value="0"/>
                            <t t-if="len(lines[0]) &gt;0">
                                <h4>Cloth Products</h4>
                                <table class="table">
                                    <tr>
                                        <th>Code</th>
                                        <th>Product</th>
                                        <th>Cloth Rolls</th>
                                        <th>Cut Lot</th>
                                        <th>Quantity</th>
                                    </tr>
                                    <tr t-as="line" t-foreach="lines[0]">
                                        <t t-set="count" t-value="count+line['quantity']"/>
                                        <td>
                                            <span t-esc="line['code']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['product']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['cloth_rolls']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['cut_lot']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['quantity']"/>
                                        </td>
                                    </tr>
                                </table>
                            </t>
                            <t t-if="len(lines[1]) &gt;0">
                                <h4>Cover Products</h4>
                                <table class="table">
                                    <tr>
                                        <th>Code</th>
                                        <th>Product</th>
                                        <th>Cut Lot</th>
                                        <th>Print Lot</th>
                                        <th>Quantity</th>
                                    </tr>
                                    <tr t-as="line" t-foreach="lines[1]">
                                        <t t-set="count" t-value="count+line['quantity']"/>
                                        <td>
                                            <span t-esc="line['code']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['product']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['cut_rolls']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['print_lot']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['quantity']"/>
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table">
                                    <tr>
                                        <td style="border-top:solid 1px; border-color:#A4A4A4; border-bottom: 1px solid #A4A4A4;">
                                            <strong>Units</strong>
                                        </td>
                                        <td class="text-right" style="border-top:solid 1px; border-color:#A4A4A4; border-bottom: 1px solid #A4A4A4;">
                                            <span t-esc="count"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-xs-6">
                                <table style="width:60px;">
                                    <tr>
                                        <th>
                                            <span>DRIVER:</span>
                                        </th>
                                        <td>________________________________
                                    </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <span>TRACTOR:</span>
                                        </th>
                                        <td>________________________________
                                    </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <span>ECONOMICAL:</span>
                                        </th>
                                        <td>________________________________
                                    </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <span>PLATES</span>
                                        </th>
                                        <td>________________________________
                                    </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-6"/>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row text-center">
                            <div class="col-xs-1"/>
                            <div class="col-xs-4 text-center">
                                <div style="border-bottom: 1px solid black;"/>
                                <span>DELIVERED</span>
                            </div>
                            <div class="col-xs-2"/>
                            <div class="col-xs-4 text-center">
                                <div style="border-bottom: 1px solid black;"/>
                                <span>RECEIPT</span>
                            </div>
                            <div class="col-xs-1"/>
                        </div>
                        <br/>
                        <br/>
                    </div>
                </t>
            </t>
        </template>
        <template id="shipment_translate">
            <t t-call="report.html_container">
                <t t-as="doc_id" t-foreach="doc_ids">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'mrp_workflow_print_label.shipment')"/>
                </t>
            </t>
        </template>
        <record id="paperformat_shipment" model="report.paperformat">
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="header_spacing">35</field>
            <field name="margin_top">10</field>
            <field name="margin_right">7</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">7</field>
            <field eval="False" name="header_line"/>
            <field name="name">US Letter sale order</field>
            <field name="orientation">Portrait</field>
            <field name="dpi">90</field>
            <field eval="True" name="default"/>
            <field name="format">Letter</field>
        </record>
        <report file="mrp_workflow_print_label.shipment" id="print_shipment" model="stock.picking" name="mrp_workflow_print_label.shipment" report_type="qweb-pdf" string="Departure Boarding"/>
        <record id="print_shipment" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_shipment"/>
        </record>
    </data>
</openerp>