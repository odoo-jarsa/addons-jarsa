<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <template id="conekta_acquirer_button">
            <form id="card-form" method="POST" t-att-action="tx_url" target="_self" class="s_website_form form-horizontal container-fluid mt32">
                <script type="text/javascript">
                    Conekta.setPublishableKey('<t t-esc="acquirer.conekta_public_key"/>');
                </script>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4">Cardholder Name</label>
                    <div class="col-md-7 col-sm-8">
                        <input id="cardholder_name" data-conekta="card[name]" type="text" class="form-control o_website_form_input" size="20" requierd="True"/>
                    </div>
                </div>
                <div id="card-number-div" class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4">Card Number</label>
                    <div class="col-md-7 col-sm-8">
                        <input id="conekta-card-number" data-conekta="card[number]" type="tel" pattern="[0-9]*" inputmode="numeric"  class="form-control o_website_form_input" size="20"/>
                    </div>
                </div>
                <div id="cvc-div" class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4">CVC</label>
                    <div class="col-md-3 col-sm-3">
                        <input id="cvc" data-conekta="card[cvc]" type="tel" pattern="[0-9]*" inputmode="numeric" class="form-control o_website_form_input" size="4"/>
                    </div>
                </div>
                <div >
                    <input id="exp_month" data-conekta="card[exp_month]" type='hidden'/>
                    <input id="exp_year" data-conekta="card[exp_year]" type='hidden'/>
                </div>
                <div id="expiration-date" class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4">Expiration date (MM/YYYY)</label>
                    <div class="col-md-7 col-sm-8">
                        <input id="exp_date" type="tel" inputmode="numeric" class="form-control o_website_form_input expiration" size="2" placeholder="Month/Year" style="text-align:center;"/>
                    </div>
                </div>
                <div id="month-div" class="form-group form-field o_website_form_required">
                    <label class="col-md-3 col-sm-4">Monthly Installments</label>
                    <div class="col-md-7 col-sm-8">
                        <select id="month-inte" class="form-control"> 
                            <option  data-conekta="card[monthly_installments]" t-att-value="100" selected="selected">one payment</option>
                            <option  data-conekta="card[monthly_installments]" t-att-value="3">3 months</option>
                            <option  data-conekta="card[monthly_installments]" t-att-value="6">6 months</option>
                            <option  data-conekta="card[monthly_installments]" t-att-value="9">9 months</option>
                            <option  data-conekta="card[monthly_installments]" t-att-value="12">12 months</option>
                        </select>
                    </div>
                </div>
                <p class="card-errors"/>
                <button name="conekta" t-att-class="submit_class" width="100px" data-loading-text='&lt;i class="fa fa-circle-o-notch fa-spin"&gt;&lt;/i&gt; Processing Order'>
                    <img src="/payment_conekta/static/src/img/conekta_icon.png" t-if="not submit_txt"/>
                    <span t-if="submit_txt">
                        <t t-esc="submit_txt"/>
                        <span class="fa fa-long-arrow-right"/>
                    </span>
                </button>
            </form>
        </template>
        <template id="conekta_card" inherit_id="website_sale.payment">
            <xpath expr="//div[@class='col-lg-3 col-sm-3']" position="after">
                <div id="card-wrapper" class="col-lg-3 hidden-md hidden-sm hidden-xs" style="display: none">
                    <div class="card-wrapper"></div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>