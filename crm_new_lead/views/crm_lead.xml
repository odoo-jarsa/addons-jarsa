        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <button name="assign_ticket_to_self" position="after">
                <button class="oe_highlight" icon="fa-child" name="new_crm_lead" string="Create Lead" type="object" confirm="Are you sure you want to start a new lead based on this ticket?"/>
            </button>
        </field>
    </record>
</odoo>
